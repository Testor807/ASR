<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- 头部信息 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <!-- 类型图标 -->
            <ImageView
                android:id="@+id/iv_type_icon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_realtime"
                android:layout_marginEnd="8dp"
                tools:src="@drawable/ic_realtime" />

            <!-- 时间戳 -->
            <TextView
                android:id="@+id/tv_timestamp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="12sp"
                android:textColor="@color/text_secondary"
                tools:text="2024-01-15 14:30:25" />

            <!-- 置信度 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <View
                    android:id="@+id/view_confidence_indicator"
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:background="@drawable/confidence_indicator"
                    android:layout_marginEnd="4dp" />

                <TextView
                    android:id="@+id/tv_confidence"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="11sp"
                    android:textColor="@color/text_secondary"
                    tools:text="95%" />

            </LinearLayout>

            <!-- 更多操作按钮 -->
            <ImageButton
                android:id="@+id/btn_more"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginStart="8dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_more_vert"
                android:contentDescription="更多操作"
                android:scaleType="centerInside" />

        </LinearLayout>

        <!-- 转录文本 -->
        <TextView
            android:id="@+id/tv_transcription_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/text_primary"
            android:lineSpacingExtra="2dp"
            android:maxLines="3"
            android:ellipsize="end"
            android:layout_marginBottom="8dp"
            tools:text="这是一段转录的文本内容，可能会比较长，需要适当的截断处理..." />

        <!-- 底部信息 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- 录音时长 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:src="@drawable/ic_duration"
                    android:layout_marginEnd="4dp"
                    android:alpha="0.6" />

                <TextView
                    android:id="@+id/tv_duration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="11sp"
                    android:textColor="@color/text_secondary"
                    tools:text="00:45" />

            </LinearLayout>

            <!-- 字数统计 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginStart="16dp">

                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:src="@drawable/ic_text_count"
                    android:layout_marginEnd="4dp"
                    android:alpha="0.6" />

                <TextView
                    android:id="@+id/tv_word_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="11sp"
                    android:textColor="@color/text_secondary"
                    tools:text="128字" />

            </LinearLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <!-- 编辑状态指示器 -->
            <TextView
                android:id="@+id/tv_edited_indicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已编辑"
                android:textSize="10sp"
                android:textColor="@color/accent_color"
                android:background="@drawable/edited_indicator_bg"
                android:paddingHorizontal="6dp"
                android:paddingVertical="2dp"
                android:visibility="gone" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>